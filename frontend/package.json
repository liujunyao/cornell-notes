{
  "name": "cornell-notes-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "康奈尔笔记学习助手 - 前端 Monorepo",
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" dev",
    "dev:web": "pnpm --filter @cornell-notes/web dev",
    "dev:mobile": "pnpm --filter @cornell-notes/mobile dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:web": "pnpm --filter @cornell-notes/web build",
    "build:mobile": "pnpm --filter @cornell-notes/mobile build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
